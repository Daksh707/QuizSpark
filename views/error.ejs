<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body text-center p-5">
                    <i class="fas fa-exclamation-triangle text-danger fa-4x mb-4"></i>
                    <h2 class="text-danger mb-3">Oops! Something went wrong</h2>
                    <p class="text-muted mb-4"><%= message %></p>
                    
                    <% if (typeof error !== 'undefined' && error && error.stack && process.env.NODE_ENV === 'development') { %>
                        <div class="alert alert-warning text-start">
                            <h6>Debug Information:</h6>
                            <pre class="small"><%= error.stack %></pre>
                        </div>
                    <% } %>
                    
                    <div class="d-flex gap-2 justify-content-center">
                        <a href="/" class="btn btn-primary" data-testid="button-home">
                            <i class="fas fa-home me-2"></i>Go Home
                        </a>
                        <button onclick="history.back()" class="btn btn-outline-secondary" data-testid="button-back">
                            <i class="fas fa-arrow-left me-2"></i>Go Back
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>