<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body text-center p-5">
                    <i class="fas fa-question-circle text-warning fa-4x mb-4"></i>
                    <h2 class="text-warning mb-3">404 - Page Not Found</h2>
                    <p class="text-muted mb-4">Sorry, the page you are looking for doesn't exist.</p>
                    
                    <div class="d-flex gap-2 justify-content-center">
                        <a href="/" class="btn btn-primary" data-testid="button-home">
                            <i class="fas fa-home me-2"></i>Go Home
                        </a>
                        <% if (typeof user !== 'undefined' && user) { %>
                            <% if (user.role === 'teacher') { %>
                                <a href="/teacher/dashboard" class="btn btn-outline-primary" data-testid="button-dashboard">
                                    <i class="fas fa-tachometer-alt me-2"></i>Dashboard
                                </a>
                            <% } else { %>
                                <a href="/student/dashboard" class="btn btn-outline-primary" data-testid="button-dashboard">
                                    <i class="fas fa-tachometer-alt me-2"></i>Dashboard
                                </a>
                            <% } %>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>